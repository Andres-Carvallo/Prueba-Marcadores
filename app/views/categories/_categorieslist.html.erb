
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Privacy</th>
      <th>Belongs to </th>
      <th>Bookmark Id </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <%if category.privacy?%>
          <td><%= 'Private' %></td>
        <%end%>
        <%if !category.privacy%>
          <td><%= 'Public' %></td>
        <%end%>
        <td><%= category.bookmark.name %></td>
        <td><%= category.bookmark.id %></td>
        <td><%= link_to 'Show', category %></td>
        <td><%= link_to 'Edit', edit_category_path(category) %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



