<p id="notice"><%= notice %></p>

<h1>Bookmarks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookmarks.each do |bookmark| %>
      <tr>
        <td><%= bookmark.name %></td>
        <td><%= link_to 'Show', bookmark %></td>
        <td><%= link_to 'Edit', edit_bookmark_path(bookmark) %></td>
        <td><%= link_to 'Destroy', bookmark, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div> 
  <%= link_to 'New Bookmark', new_bookmark_path %>
</div>
<div>
  <%= link_to 'New Category', new_category_path %>
</div>
<div>
  <%= link_to 'New Sub Category', new_sub_category_path %>
</div>
<div>
  <%= link_to 'Add url', new_url_path %>
</div>
