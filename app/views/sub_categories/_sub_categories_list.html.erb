
<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Privacy</th>
      <th>Bleongs to </th>
      <th>Category Id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sub_categories.each do |sub_category| %>
      <tr>
        <td><%= sub_category.id %></td>
        <td><%= sub_category.name %></td>
        <%if sub_category.privacy?%>
          <td><%= 'Private' %></td>
        <%end%>
        <%if !sub_category.privacy%>
          <td><%= 'Public' %></td>
        <%end%>
        <td><%= sub_category.category.name %></td>
        <td><%= sub_category.category.id %></td>
        <td><%= link_to 'Show', sub_category_path(sub_category) %></td>
        <td><%= link_to 'Edit', edit_category_path(sub_category) %></td>
        <td><%= link_to 'Destroy', sub_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



