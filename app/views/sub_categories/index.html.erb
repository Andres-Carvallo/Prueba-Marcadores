<p id="notice"><%= notice %></p>

<h1>Bookmarks</h1>
<table>
  <thead>
    <tr>
      <th>Bookmark Name</th>
      <th>Bookmark Categories</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @bookmarks.each do |bookmark| %>
      <tr>
        <td><%= bookmark.name %></td>
        <td><%= bookmark_list(bookmark) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<h1>Categories</h1>
<table>
  <thead>
    <tr>
      <th>Category Id</th>
      <th>Category Name</th>
      <th>Sub categories</th>
      <th>Category Urls</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <%if !category.privacy%>
          <td><%= category.id %></td>
          <td><%= category.name %></td>
          <td><%= category_list(category) %></td>
          <td><%= url_list(category) %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>
<h1>Sub-Categories</h1>
<table>
  <thead>
    <tr>
      <th>Sub Category Id</th>
      <th>Sub Category Name</th>
      <th>Sub Category Urls</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sub_categories.each do |sub_category| %>
      <tr>
        <%if !sub_category.privacy%>
          <td><%= sub_category.id %></td>
          <td><%= sub_category.name %></td>
          <td><%= url_list(sub_category) %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>
<hr>
<br>
<h2>Add your Urls</h2>
<%= render '/urls/form', url: @url%>
<br>
<hr>
<h2>Admin Bookmarks Managament</h2>
<div> 
  <%= link_to 'Manage Bookmark', new_bookmark_path %>
</div>
<div>
  <%= link_to 'Manage Category', new_category_path %>
</div>
<div>
  <%= link_to 'Manage Sub Category', new_sub_category_path %>
</div>

<hr>

<h2>Sub-Category Distribution</h2>
<%= pie_chart @sub_cat_chart %>

