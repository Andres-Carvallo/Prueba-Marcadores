<p id="notice"><%= notice %></p>

<h1>Bookmarks</h1>
<table>
  <thead>
    <tr>
      <th>Bookmark Name</th>
      <th>Bookmark Categories</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @bookmarks.each do |bookmark| %>
      <tr>
        <td><%= bookmark.name %></td>
        <% category_list = [] %>
        <% bookmark.categories .each do |category| %>
          <% category_list.push(category.name) %> 
        <%end%>
        <td><%= category_list.join(', ') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<h1>Categories</h1>
<table>
  <thead>
    <tr>
      <th>Category Name</th>
      <th>Category privacy</th>
      <th>Sub categories</th>
      <th>Category Urls</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <%if category.privacy?%>
          <td><%= 'Private' %></td>
        <%end%>
        <%if !category.privacy%>
          <td><%= 'Public' %></td>
        <%end%>

        <% sub_category_list = [] %>
        <% category.sub_categories .each do |sub_category| %>
          <% sub_category_list.push(sub_category.name) %> 
        <%end%>
        <td><%= sub_category_list.join(', ') %></td>

         <% url_list = [] %>
        <% category.urls .each do |url| %>
          <% url_list.push(url.url_name) %> 
        <%end%>
        <td><%= url_list.join(', ') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<h1>Sub-Categories</h1>
<table>
  <thead>
    <tr>
      <th>Sub Category Name</th>
      <th>Sub Category privacy</th>
      <th>Sub Category Urls</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sub_categories.each do |sub_category| %>
      <tr>
        <td><%= sub_category.name %></td>
        <%if sub_category.privacy?%>
          <td><%= 'Private' %></td>
        <%end%>
        <%if !sub_category.privacy%>
          <td><%= 'Public' %></td>
        <%end%>
        <% url_list = [] %>
        <% sub_category.urls .each do |url| %>
          <% url_list.push(url.url_name) %> 
        <%end%>
        <td><%= url_list.join(', ') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<hr>
<br>
<h2>Add your Urls</h2>
<%= render '/urls/form', url: @url%>
<br>
<hr>
<h2>Bookmarks Managament</h2>
<div> 
  <%= link_to 'Manage Bookmark', new_bookmark_path %>
</div>
<div>
  <%= link_to 'Manage Category', new_category_path %>
</div>
<div>
  <%= link_to 'Manage Sub Category', new_sub_category_path %>
</div>

<hr>

